                                <!-- Data will be inserted dynamically here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for adding service provider -->
    <div class="modal fade" id="serviceProviderModal" tabindex="-1" aria-labelledby="serviceProviderModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h5 class="modal-title" id="serviceProviderModalLabel">Add Service Provider</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <!-- Modal Body -->
                <div class="modal-body">
                    <form id="serviceProviderForm">
                        <!-- Service Provider Name -->
                        <div class="mb-3">
                            <label for="serviceProviderName" class="form-label">Service Provider Name</label>
                            <input type="text" class="form-control" id="serviceProviderName" placeholder="Enter service provider name">
                        </div>

                        <!-- Logo Upload -->
                        <div class="mb-3">
                            <label for="serviceProviderLogo" class="form-label">Logo</label>
                            <input class="form-control" type="file" id="serviceProviderLogo" accept="image/*">
                        </div>

                        <!-- Preview of Logo (optional) -->
                        <div id="logoPreview" class="mt-3" style="display: none;">
                            <p><strong>Logo Preview:</strong></p>
                            <img id="logoImage" src="" alt="Logo Preview" class="img-fluid" style="max-width: 100px;">
                        </div>
                    </form>
                </div>
                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id="btnSubmit" type="button" class="btn btn-primary">Save Service Provider</button>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="~/lmsData/jquery/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        Get_ServiceProviderMaster();
    });

    // Save the service provider
    $("#btnSubmit").click(function () {
        var formData = new FormData();

        // Add the text data
        formData.append("ProviderName", $("#serviceProviderName").val());
        formData.append("UserID", 0);  // or get the user ID dynamically

        // Add the file (if provided)
        var logoFile = $("#serviceProviderLogo")[0].files[0];  // Get the first file in the file input
        if (logoFile) {
            formData.append("logoFile", logoFile);  // Append the file with the name "logoFile"
        }

        // Perform the AJAX request to save the service provider
        $.ajax({
            url: "/MASTERS/SaveServiceProvider",  // URL of your controller action
            type: "POST",
            data: formData,
            processData: false,  // Do not process the data
            contentType: false,  // Do not set content type; jQuery will set it correctly for FormData
            success: function (result) {
                alert(result.responseMessage);  // Show success message
                // Optionally, reload the table or reset the form here
                $("#serviceProviderForm")[0].reset();
                $("#serviceProviderModal").modal("hide");
                Get_ServiceProviderMaster();
            },
            error: function (errormessage) {
                alert("Error: " + errormessage.responseText);
            }
        });
    });

    // Get service providers and populate the table
    function Get_ServiceProviderMaster() {
        $.ajax({
            type: 'GET',
            dataType: 'Json',
            contentType: 'application/json; charset=utf-8',
            url: "@Url.Action("Get_ServiceProviderMaster", "MASTERS")",
          
            success: function (result) {
                var data1 = JSON.parse(result);
                if (data1.length > 0) {
                    $('#tableBody').empty();  // Clear the table body
                    $.each(data1, function (i, data) {
                        var trows = "<tr>";
                        trows += "<td>" + (i + 1) + "</td>";  // Sl No (1-based index)
                        trows += "<td><img src='/uploads/logos/" + data.Logo + "' alt='Logo' class='img-fluid' style='max-width: 100px;'></td>";  // Logo
                        trows += "<td>" + data.ProviderName + "</td>";  // Provider Name
                        trows += "<td><button class='btn btn-primary' onclick='Edit(" + data.Id + ")'>Edit</button> <button class='btn btn-danger' onclick='Delete_ServiceProviderMaster(" + data.Id + ")'>Delete</button></td>";  // Action (Edit/Delete)
                        trows += "</tr>";
                        $('#tableBody').append(trows);
                    });
                    $('#dataTableExamplemanoj').DataTable();  // Initialize DataTable
                }
            },
            error: function (Message) {
                alert(Message);
            }
        });
    }

    // Edit function (Example implementation)
    function Edit(id) {
        $.ajax({
            url: "/ServiceProvider/GetServiceProvider?id=" + id,
            type: "GET",
            contentType: "application/json;charset=UTF-8",
            dataType: "json",
            success: function (result) {
                $("#serviceProviderName").val(result.ProviderName);
                if (result.Logo) {
                    $("#logoPreview").show();
                    $("#logoImage").attr("src", "/uploads/logos/" + result.Logo);
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }

    // Delete function (Example implementation)
    function Delete_ServiceProviderMaster(id) {
        if (confirm("Are you sure you want to delete this service provider?")) {
            $.ajax({
                url: "/ServiceProvider/DeleteServiceProvider?id=" + id,
                type: "POST",
                success: function () {
                    alert("Service provider deleted successfully.");
                    Get_ServiceProviderMaster();  // Refresh the table
                },
                error: function (errormessage) {
                    alert("Error: " + errormessage.responseText);
                }
            });
        }
    }
</script>
