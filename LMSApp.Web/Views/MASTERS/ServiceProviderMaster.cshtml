    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <div class="table-responsive">
                    <div id="dataTableExample_wrapper" class="dt-container dt-bootstrap5 dt-empty-footer">
                        <table id="dataTableExamplemanoj" class="table dataTable" aria-describedby="dataTableExample_info" style="width: 100%">
                            <colgroup>
                                <col data-dt-column="0" style="width: 195.219px;">
                                <col data-dt-column="1" style="width: 281.391px;">
                                <col data-dt-column="2" style="width: 158.281px;">
                                <col data-dt-column="3" style="width: 93.5156px;">
                            </colgroup>
                            <thead>
                                <tr role="row">
                                    <th data-dt-column="0" rowspan="1" colspan="1" class="dt-orderable-asc dt-orderable-desc dt-ordering-asc" aria-sort="ascending" aria-label="Name: Activate to invert sorting" tabindex="0">
                                        <span class="dt-column-title" role="button">Sl No</span><span class="dt-column-order"></span>
                                    </th>
                                    <th data-dt-column="1" rowspan="1" colspan="1" class="dt-orderable-asc dt-orderable-desc" aria-label="Logo: Activate to sort" tabindex="0">
                                        <span class="dt-column-title" role="button">Logo</span><span class="dt-column-order"></span>
                                    </th>
                                    <th data-dt-column="2" rowspan="1" colspan="1" class="dt-orderable-asc dt-orderable-desc" aria-label="Provider Name: Activate to sort" tabindex="0">
                                        <span class="dt-column-title" role="button">Provider Name</span><span class="dt-column-order"></span>
                                    </th>
                                    <th data-dt-column="3" rowspan="1" colspan="1" class="dt-type-numeric dt-orderable-asc dt-orderable-desc" aria-label="Action: Activate to sort" tabindex="0">
