
@{
    ViewBag.Title = "Enquiry";
    Layout = "~/Views/Shared/_LayoutLMS.cshtml";

}
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <!-- Page Title -->
        @*<div class="page-title">
                <h4>Enquiry</h4>
            </div>*@


    </div>
</div>


<body>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <div class="container mt-5">
                    <!-- Card -->
                    <div class="card shadow">
                        <div class="card-header" style="background-color: #66d1d1 !important;">
                            <h4 class="mb-0 text-center text-white">Enquiry Form</h4>
                        </div>

                        <div class="card-body">
                            <!-- Form Starts Here -->
                            <form>
                                <div class="row mb-3">
                                    <!-- Name -->
                                    <div class="col-md-6">
                                        <label for="name" class="form-label">Name</label>
                                        <input type="text" class="form-control" id="name" placeholder="Enter your name" required>
                                    </div>
                                    <!-- Mobile Number -->
                                    <div class="col-md-6">
                                        <label for="mobile" class="form-label">Mobile Number</label>
                                        <input type="tel" class="form-control" id="mobile" placeholder="Enter your mobile number" required>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <!-- Email -->
                                    <div class="col-md-6">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" placeholder="Enter your email">
                                    </div>
                                    <!-- WhatsApp -->
                                    <div class="col-md-6">
                                        <label for="whatsapp" class="form-label">WhatsApp</label>
                                        <input type="tel" class="form-control" id="whatsapp" placeholder="Enter your WhatsApp number">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <!-- City -->
                                    <div class="col-md-6">
                                        <label for="city" class="form-label">City</label>
                                        <input type="text" class="form-control" id="city" placeholder="Enter your city" required>
                                    </div>
                                    <!-- Area -->
                                    <div class="col-md-6">
                                        <label for="area" class="form-label">Area</label>
                                        <input type="text" class="form-control" id="area" placeholder="Enter your area">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <!-- Pin -->
                                    <div class="col-md-6">
                                        <label for="pin" class="form-label">Pin</label>
                                        <input type="text" class="form-control" id="pin" placeholder="Enter your pin code">
                                    </div>
                                    <!-- Item -->
                                    <div class="col-md-6">
                                        <label for="item" class="form-label">Item</label>
                                        <input type="text" class="form-control" id="item" placeholder="Enter the item name" required>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <!-- Quantity -->
                                    <div class="col-md-6">
                                        <label for="quantity" class="form-label">Quantity</label>
                                        <input type="number" class="form-control" id="quantity" placeholder="Enter the quantity" min="1" required>
                                    </div>
                                    <!-- Description -->
                                    <div class="col-md-6">
                                        <label for="description" class="form-label">Description</label>
                                        <textarea class="form-control" id="description" rows="1" placeholder="Enter additional details"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    @*<textarea class="form-control" id="description" rows="1" placeholder="Enter additional details"></textarea>*@
                                </div>


                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>



<!-- Bootstrap JS (Optional for advanced features like validation) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
   





